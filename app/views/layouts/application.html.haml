!!!

%html
  %head
    %meta{'charset' => 'utf-8'}
    %meta{'http-equiv' => 'x-ua-compatible', 'content' => 'ie=edge'}

    %title= t('app_title')

    %meta{'name' => 'description', 'content' => t('app_description')}
    %meta{'name' => 'viewport', 'content' => 'width=device-width, initial-scale=1'}

    -# Links and scripts to include bootstrap
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css", :rel => "stylesheet"}/
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"}
    %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"}
    
    %script{:crossorigin => "anonymous", :integrity => "sha256-qM7QTJSlvtPSxVRjVWNM2OfTAz/3k5ovHOKmKXuYMO4=", :src => "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag 'modernizr'
    = csrf_meta_tags

  %body
    -# - flash.each do |key, value|
    -#   .alert.alert-warning
    -#     = content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank?

    -# Renders navbar for every page above content
    = render partial: "navigation/navBar"
    = yield
    -# Renders footer for below page above content
    = render partial: "navigation/footer"

